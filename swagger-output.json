              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "integer",
                  "example": 200
                },
                "message": {
                  "type": "string",
                  "example": "삭제가 완료되었습니다."
                },
                "data": {

                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },

