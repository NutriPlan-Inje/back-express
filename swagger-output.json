    "/node/macronutrientRatio/day/{u_id}/{date}": {
      "get": {
        "tags": ["Macronutrient Ratio"],
        "summary": "Get macronutrient ratio by user ID and date for a day",
        "parameters": [
          {
            "name": "u_id",
            "in": "path",
            "description": "ID of the user (Example: 4)",
            "required": true,
            "type": "integer"
          },
          {
            "name": "date",
            "in": "path",
            "description": "Date to calculate macronutrient ratio (Explain : 2024-09-24)",
            "required": true,
            "schema": {
              "type": "object"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully calculated macronutrient ratio",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "integer",
                  "example": 200
                },
                "message": {
                  "type": "string",
                  "example": "계산을 완료했습니다"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "date": {
                      "type": "string",
                      "example": "2024-09-24"
                    },
                    "macronutrient": {
                      "type": "object",
                      "properties": {
                        "carbohydrate": {
                          "type": "integer",
                          "example": 77
                        },
                        "protein": {
                          "type": "integer",
                          "example": 85
                        },
                        "fat": {
                          "type": "integer",
                          "example": 53
                        }
                      }
                    },
                    "macronutrientRatio": {
                      "type": "object",
                      "properties": {
                        "carbohydrate": {
                          "type": "integer",
                          "example": 35
                        },
                        "protein": {
                          "type": "integer",
                          "example": 40
                        },
                        "fat": {
                          "type": "integer",
                          "example": 25
                        }
                      }
                    },
                    "eachKcal": {
                      "type": "object",
                      "properties": {
                        "morning": {
                          "type": "integer",
                          "example": 440
                        },
                        "lunch": {
                          "type": "integer",
                          "example": 370
                        },
                        "dinner": {
                          "type": "integer",
                          "example": 390
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
