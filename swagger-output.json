  "paths": {
    "/node/dietPlan/{u_id}/{date}": {
      "get": {
        "tags": ["Diet Plan"],  
        "summary": "Get diet plan by user ID and date",
        "parameters": [
          {
            "name": "u_id",
            "in": "path",
            "description": "ID of the user (Explain : 4)",
            "required": true,
            "type": "integer"
          },
          {
            "name": "date",
            "in": "path",
            "description": "Date to retrieve diet plan (Explain : 2024-09-24)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved diet plan",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "integer",
                  "example": 200
                },
                "message": {
                  "type": "string",
                  "example": "성공적으로 조회했습니다"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "example": 4
                      },
                      "user_id": {
                        "type": "integer",
                        "example": 4
                      },
                      "food_id": {
                        "type": "integer",
                        "example": 4
                      },
                      "date": {
                        "type": "string",
                        "example": "2024-09-24"
                      },
                      "mealTime": {
                        "type": "integer",
                        "example": 1
                      }
                    }
                  },
                  "example": [
                    {
                      "id": 4,
                      "user_id": 4,
                      "food_id": 4,
                      "date": "2024-09-24",
                      "mealTime": 1
                    },
                    {
                      "id": 11,
                      "user_id": 4,
                      "food_id": 5,
                      "date": "2024-09-24",
                      "mealTime": 2
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/node/dietPlan/{id}": {
      "delete": {
        "tags": ["Diet Plan"],  
        "summary": "Delete diet plan by dietPlanID",
